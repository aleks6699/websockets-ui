{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",    
    "moduleResolution": "Node",
    "outDir": "./dist",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "strict": true, 
    "noEmit": true, 

  },
  "include": ["./src/**/*", "index.ts"]
}